# =========================
# MiMind Runtime Variables
# =========================

# ---------- Backend core ----------
# SQLite path used by backend storage
MIMIND_DB_PATH=data/mimind.sqlite3

# Admin auth
ADMIN_PASSWORD=change-me-admin-password
ADMIN_SESSION_TTL_HOURS=8

# User JWT auth
AUTH_JWT_SECRET=change-me-jwt-secret
AUTH_ACCESS_TTL_MINUTES=15
AUTH_REFRESH_TTL_HOURS=168
AUTH_EMAIL_VERIFICATION_TTL_HOURS=24
AUTH_COOKIE_SECURE=false

# Billing provider: local | stripe | domestic
BILLING_PROVIDER=local
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_BASE=
STRIPE_PRICE_ID_COACH=
STRIPE_CHECKOUT_SUCCESS_URL=https://example.com/billing/success
STRIPE_CHECKOUT_CANCEL_URL=https://example.com/billing/cancel
STRIPE_WEBHOOK_TOLERANCE_SECONDS=300
STRIPE_TIMEOUT_SECONDS=10
ALIPAY_GATEWAY_URL=https://openapi.alipay.com/gateway.do
ALIPAY_NOTIFY_SECRET=
WECHAT_PAY_GATEWAY_URL=https://api.mch.weixin.qq.com/v3/pay/transactions/native
WECHAT_PAY_NOTIFY_SECRET=

# Sensitive data encryption key for SQLite at-rest protection (AES-256):
# - base64 encoded 32-byte key, e.g. base64:xxxxxxxx
# - or 64-char hex key
MIMIND_DATA_ENCRYPTION_KEY=base64:change-me-32-byte-key

# Active prompt pack version (optional)
MINDCOACH_PROMPT_PACK=2026.02.1

# Media asset hosting base URL:
# - local embedded static files: /audio
# - CDN/object storage: https://cdn.example.com/mimind-assets
MEDIA_ASSET_BASE_URL=/audio

# ---------- Model gateway ----------
# local | openai
MINDCOACH_PROVIDER_SAFETY_NLU=local
MINDCOACH_PROVIDER_SAFETY_SEMANTIC=local
MINDCOACH_PROVIDER_COACH=local

# OpenAI settings (required when any provider above is set to "openai")
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_COACH_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ---------- Memory retrieval ----------
# local | openai
MINDCOACH_MEMORY_EMBEDDER=local
MINDCOACH_MEMORY_RERANKER=local

# ---------- Frontend ----------
# Empty means same-origin API (/api)
VITE_API_BASE=

# ---------- Docker Compose DB ----------
POSTGRES_DB=mimind
POSTGRES_USER=mimind
POSTGRES_PASSWORD=mimind_dev
